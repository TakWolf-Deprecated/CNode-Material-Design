<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme Light -->
    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/selectable_item_background_general_normal_light</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_pressed_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general_light</item>
        <item name="navigationItemTextColor">@color/navigation_item_text_light</item>
        <item name="referenceText">@color/reference_text_light</item>
        <item name="referenceBackground">@drawable/reference_background_light</item>
        <item name="darkMode">false</item>
    </style>

    <style name="AppThemeLight" parent="BaseAppThemeLight" />

    <style name="AppThemeLight.FitsStatusBar" />

    <!-- App Theme Dark -->
    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/selectable_item_background_general_normal_dark</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_pressed_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general_dark</item>
        <item name="navigationItemTextColor">@color/navigation_item_text_dark</item>
        <item name="referenceText">@color/reference_text_dark</item>
        <item name="referenceBackground">@drawable/reference_background_dark</item>
        <item name="darkMode">true</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppThemeDark" />

    <style name="AppThemeDark.FitsStatusBar" />

    <!-- App Theme Launch -->
    <style name="AppThemeLaunch" parent="BaseAppThemeLight">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <!-- App Dialog Light -->
    <style name="BaseAppDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/selectable_item_background_general_normal_light</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_pressed_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general_light</item>
    </style>

    <style name="AppDialogLight" parent="BaseAppDialogLight" />

    <style name="AppDialogLight.Alert">
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <style name="AppDialogLight.TopicReply">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnim.BottomSheetDialog</item>
    </style>

    <!-- App Dialog Dark -->
    <style name="BaseAppDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/selectable_item_background_general_normal_dark</item>
        <item name="widgetBackgroundDark">@color/selectable_item_background_general_pressed_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
        <item name="selectableItemBackgroundGeneral">@drawable/selectable_item_background_general_dark</item>
    </style>

    <style name="AppDialogDark" parent="BaseAppDialogDark" />

    <style name="AppDialogDark.Alert">
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <style name="AppDialogDark.TopicReply">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnim.BottomSheetDialog</item>
    </style>

    <!-- App Widget -->
    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <!-- Deep Line -->
    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->
    <style name="AppWidget.ItemGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.ShadowGap.Opposite">
        <item name="android:layout_marginTop">@dimen/shadow_gap_margin_fill</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/gap_shadow_opposite</item>
    </style>

    <!-- Badge Dot -->
    <style name="AppWidget.BadgeDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/badge_dot</item>
    </style>

    <!-- Navigation -->
    <style name="AppWidget.NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:textColor">?attr/navigationItemTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackgroundGeneral</item>
    </style>

    <style name="AppWidget.NavigationItemBadge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppWidget.NavigationItemDeepLineGap" parent="AppWidget.DeepLine">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Button -->
    <style name="AppWidget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_image</item>
    </style>

    <style name="AppWidget.Button.Stroke">
        <item name="android:textColor">@drawable/button_stroke_text_color</item>
        <item name="android:background">@drawable/button_stroke_image</item>
    </style>

    <!-- App Animation -->
    <style name="AppAnim" parent="android:Animation" />

    <style name="AppAnim.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

</resources>
