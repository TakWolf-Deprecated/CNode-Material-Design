<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_bar_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/editor_bar_btn_format_bold"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_format_bold_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_format_italic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_format_italic_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_format_quote"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_format_quote_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_format_list_bulleted"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_format_list_bulleted_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_format_list_numbered"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_format_list_numbered_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_insert_code"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_insert_code_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_insert_link"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_insert_link_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_insert_photo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_insert_photo_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

    <ImageView
        android:id="@+id/editor_bar_btn_preview"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_visibility_grey600_24dp"
        android:scaleType="center"
        android:background="@drawable/selectable_item_background" />

</LinearLayout>
